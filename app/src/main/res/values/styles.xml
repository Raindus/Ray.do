<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/dandongshi</item>
        <item name="colorPrimaryDark">@color/dandongshi_dark</item>
        <item name="colorAccent">@color/dandongshi</item>
    </style>

    <style name="NewPlanTheme" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/SlideBottomAnimation</item>
    </style>

    <style name="SlideBottomAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_bottom_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_bottom_out</item>
    </style>

    <style name="TransparentDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@style/DialogSlideBottomAnimation</item>
    </style>

    <style name="DialogSlideBottomAnimation" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_slide_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_slide_bottom_out</item>
    </style>

</resources>
