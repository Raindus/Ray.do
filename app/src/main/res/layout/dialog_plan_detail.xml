<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/plan_detail_negative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="15dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:src="@drawable/ic_action_negative4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/plan_detail_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/titlebar_bottom_shadow"
            android:gravity="center"
            android:paddingHorizontal="10dp"
            android:singleLine="true"
            android:text="标题"
            android:textColor="@android:color/white"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    android:scaleX="1.1"
                    android:scaleY="1.1"
                    android:src="@drawable/time_active" />

                <TextView
                    android:id="@+id/plan_detail_time"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="5dp"
                    android:text="今天,4月8日,上午 00：44"
                    android:textColor="@android:color/black"
                    android:textSize="15dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="8dp"
                android:background="@color/qianzonghui" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    android:scaleX="1.1"
                    android:scaleY="1.1"
                    android:src="@drawable/time_remind_active" />

                <TextView
                    android:id="@+id/plan_detail_remind"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="5dp"
                    android:text="提前 30 分钟"
                    android:textColor="@android:color/black"
                    android:textSize="15dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="8dp"
                android:background="@color/qianzonghui" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    android:scaleX="1.1"
                    android:scaleY="1.1"
                    android:src="@drawable/time_repeat_active" />

                <TextView
                    android:id="@+id/plan_detail_repeat"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="5dp"
                    android:singleLine="true"
                    android:text="每年（4月23日）"
                    android:textColor="@android:color/black"
                    android:textSize="15dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/plan_detail_end"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:paddingHorizontal="55dp"
                android:text="永不结束"
                android:textColor="@android:color/black"
                android:textSize="15dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="8dp"
                android:background="@color/qianzonghui" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/plan_detail_status_icon"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    android:scaleX="1.3"
                    android:scaleY="1.3"
                    android:src="@drawable/plan_status_uncompleted"
                    android:tint="@color/dandongshi" />

                <TextView
                    android:id="@+id/plan_detail_status"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="未完成"
                    android:textColor="@android:color/black"
                    android:textSize="15dp" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/qianzonghui" />

                <ImageView
                    android:id="@+id/plan_detail_tag_icon"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    android:src="@drawable/plan_tag_work" />

                <TextView
                    android:id="@+id/plan_detail_tag"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="工作"
                    android:textColor="@android:color/black"
                    android:textSize="15dp" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/qianzonghui" />

                <ImageView
                    android:id="@+id/plan_detail_priority_icon"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    android:src="@drawable/plan_priority_high" />

                <TextView
                    android:id="@+id/plan_detail_priority"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="高"
                    android:textColor="@android:color/black"
                    android:textSize="15dp" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/plan_detail_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginHorizontal="8dp"
            android:background="@drawable/background_round_inside_shadow"
            android:maxLines="5"
            android:padding="12dp"
            android:scrollbarSize="3dp"
            android:scrollbarThumbVertical="@color/dandongshi_light"
            android:scrollbars="vertical"
            android:text="内容"
            android:textColor="@android:color/black" />

    </LinearLayout>

    <Button
        android:id="@+id/plan_detail_delete"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/tag_sport"
        android:foreground="?android:attr/selectableItemBackground"
        android:text="删除"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textStyle="bold" />
</LinearLayout>